<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16sp"
    tools:context=".ResultQuiz">

    <TextView
        android:text="Quiz Result"
        android:textColor="#fff"
        android:textSize="50sp"
        android:fontFamily="@font/fonts"
        android:gravity="center"
        android:layout_marginTop="70sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layoutScore"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/pappers"
        android:layout_width="match_parent"
        android:layout_height="200sp">

        <TextView
            android:id="@+id/tvResultScore"
            android:fontFamily="@font/gang"
            android:text="30"
            android:gravity="center"
            android:textColor="#C6000000"
            android:textSize="100sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="32sp"
        android:layout_below="@+id/layoutScore"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Play"
            android:textSize="30sp"
            android:textColor="#fff"
            android:fontFamily="@font/fonts"
            android:layout_below="@+id/layoutScore"
            android:background="@drawable/wood"
            android:layout_width="150sp"
            android:layout_height="80sp"/>

        <Button
            android:onClick="openMain"
            android:text="Menu"
            android:textSize="30sp"
            android:textColor="#fff"
            android:fontFamily="@font/fonts"
            android:layout_below="@+id/layoutScore"
            android:background="@drawable/wood"
            android:layout_width="150sp"
            android:layout_height="80sp"/>

    </LinearLayout>

</RelativeLayout>