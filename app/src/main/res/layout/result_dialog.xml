<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_below="@+id/iconTop"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/animation_view2"
        app:lottie_loop="true"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/firework"/>

    <ImageView
        android:id="@+id/iconTop"
        android:layout_width="427dp"
        android:layout_height="60dp"
        android:background="#CDDC39"
        android:src="@drawable/cup" />


    <TextView
        android:layout_below="@+id/iconTop"
        android:layout_centerInParent="true"
        android:id="@+id/tvYourScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score"
        android:textSize="40sp"
        android:fontFamily="@font/fonts"
        android:textStyle="bold"

        />

    <TextView

        android:layout_centerInParent="true"
        android:layout_below="@+id/tvYourScore"
        android:textColor="#F44336"
        android:id="@+id/tvNumberScore"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="60sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_below="@+id/tvNumberScore"
        android:gravity="center"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:background="@drawable/rounded_corner"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="25sp"
            android:id="@+id/acceptButton"
            />
        <Button
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:background="@drawable/rounded_corner"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            />

    </LinearLayout>


</RelativeLayout>